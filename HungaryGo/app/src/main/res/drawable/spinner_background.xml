<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Háttérszín -->
    <solid android:color="#FFFFFF"/>

    <!-- Szegély -->
    <stroke
        android:width="2dp"
        android:color="#000000"/>

    <!-- Lekerekített sarkok -->
    <corners android:radius="8dp"/>

    <!-- Padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>